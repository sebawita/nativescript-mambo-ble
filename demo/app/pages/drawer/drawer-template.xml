<drawer:RadSideDrawer id="side-drawer" drawerSize="260"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer">
  <drawer:RadSideDrawer.drawerContent>
  
    <StackLayout>
      <StackLayout class="m-t-20">
        <Label text="Navigation Menu" class="m-l-10 h2 text-primary"/>
      </StackLayout>
      <ScrollView>
        <StackLayout class="sidedrawer-content">
          <Button text="Scanner" class="btn btn-primary" tap="navigateToScanner" />
          <Button text="Arrows" class="btn btn-primary" tap="navigateToArrows" />
          <Button text="Accelerometer" class="btn btn-primary" tap="navigateToAccelerometer" />
          <Button text="Joystick" class="btn btn-primary" tap="navigateToJoystick" />
        </StackLayout>
      </ScrollView>
    </StackLayout>

  </drawer:RadSideDrawer.drawerContent>

  <drawer:RadSideDrawer.drawerTransition>
    <drawer:PushTransition />
  </drawer:RadSideDrawer.drawerTransition>
</drawer:RadSideDrawer>